#include<stdio.h>
#include<stdlib.h>
#include<time.h>
int main(){
  int *array2;
  int n;
  char dummy;
  int i;
  int j;
  int total;

  srand((unsigned)time(NULL));
  printf("n=");
  scanf("%d",&n);
  scanf("%c",&dummy);
  array2=(int *)malloc(sizeof(int)*n);
  array2=(int *)malloc(sizeof(int)*n);
  
  printf("(1)\n");
  for(i=0;i<n;i++){
    array2[i]=rand()%10;
    for(j=0;j<n;j++){
      array2[j]=rand()%10;
      printf("%2d",array2[i],array2[j]);
      //if(i=j){
      //total++;
      //}
    }
    printf("\n");
  }

  printf("\n(2)\n");
  printf("sum=%d\n",total);
  return 0;
}
  

  
